async function processMarketData() {
    if (prices.length < 20) return null; // Need enough data for indicators

    // Calculate technical indicators
    const closePrices = prices.map(p => p.close);
    const rsiValues = RSI.calculate({ values: closePrices, period: rsiPeriod });
    const emaShort = EMA.calculate({ values: closePrices, period: emaShortPeriod });
    const emaLong = EMA.calculate({ values: closePrices, period: emaLongPeriod });
    
    // Update prices with indicators
    const startIdx = prices.length - rsiValues.length;
    for (let i = 0; i < rsiValues.length; i++) {
        const idx = startIdx + i;
        prices[idx] = {
            ...prices[idx],
            rsi: rsiValues[i],
            ema_short: emaShort[i],
            ema_long: emaLong[i],
            macd: macdInput.values[i],
            atr: latestATR
        };
    }

    // Get ML prediction
    try {
        const prediction = await patternModel.predict(prices.slice(-10));
        return prediction;
    } catch (error) {
        console.error('‚ùå Prediction error:', error);
        return null;
    }
}

async function processTick(tick) {
    const price = {
        timestamp: tick.epoch,
        open: tick.open,
        high: tick.high,
        low: tick.low,
        close: tick.close
    };
    
    prices.push(price);
    if (prices.length > 100) prices.shift(); // Keep last 100 prices

    // Update technical indicators
    macdInput.values = prices.map(p => p.close);
    latestATR = ATR.calculate({
        high: prices.map(p => p.high),
        low: prices.map(p => p.low),
        close: prices.map(p => p.close),
        period: 14
    }).pop();

    // Get trading signals
    const mlSignal = await processMarketData();
    if (!mlSignal) return;

    // Combine ML signal with other indicators
    const rsi = prices[prices.length - 1].rsi;
    const shouldTrade = evaluateTradeSignals(mlSignal, rsi);
    
    if (shouldTrade && !currentContractId) {
        const tradeType = shouldTrade.signal;
        const confidence = shouldTrade.confidence;
        
        // Place trade
        ws.send(JSON.stringify({
            buy: 1,
            subscribe: 1,
            price: 100,
            parameters: {
                contract_type: tradeType,
                currency: "USD",
                symbol: "R_100",
                duration: 5,
                duration_unit: "t"
            }
        }));

        // Log trade
        new Trade({
            time: new Date(),
            action: tradeType,
            rsi: rsi,
            confidence: confidence,
            extra_signals: {
                ml_probability: mlSignal.probability,
                atr: latestATR
            },
            lot_size: 100
        }).save();
    }
}

function evaluateTradeSignals(mlSignal, rsi) {
    if (!mlSignal) return null;

    const { signal, confidence, probability } = mlSignal;
    
    // Strong ML signal (confidence > 0.7) and RSI confirms trend
    if (confidence > 0.7) {
        if (signal === 'CALL' && rsi < 70) return { signal: 'CALL', confidence };
        if (signal === 'PUT' && rsi > 30) return { signal: 'PUT', confidence };
    }
    
    // Medium ML signal (confidence > 0.5) with strong RSI
    if (confidence > 0.5) {
        if (signal === 'CALL' && rsi < 30) return { signal: 'CALL', confidence };
        if (signal === 'PUT' && rsi > 70) return { signal: 'PUT', confidence };
    }
    
    return null;
}

